<Window x:Class="Netcest_Desktop.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Netcest_Desktop"
        mc:Ignorable="d"
        Title="NetCest - Adminfelület (bejelentkezés)" Height="450" Width="800" Background="Gray">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="34*" />
            <ColumnDefinition/>
            <ColumnDefinition Width="100" />
            <ColumnDefinition Width="250" />
            <ColumnDefinition Width="100" />
            <ColumnDefinition Width="35*" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="100" />
            <RowDefinition Height="250" />
            <RowDefinition Height="100" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <StackPanel x:Name="loginPage" Background="red" Grid.Column="3" Grid.Row="2" Height="334" VerticalAlignment="Top" Visibility="Hidden" Grid.RowSpan="2">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="50" />
                    <RowDefinition Height="50" />
                    <RowDefinition Height="50" />
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>

                <TextBlock Text="Felhasználónév:" Grid.Row="2" Margin="0,16,0,0" VerticalAlignment="Top" HorizontalAlignment="Center" RenderTransformOrigin="1.106,0.861" FontSize="18"/>
                <TextBox x:Name="usernameTextBox" Grid.Row="2" Grid.Column="1" Margin="5,5,5,5" FontSize="25"/>
                <TextBlock Text="Jelszó:" Grid.Row="3" Grid.Column="0" Margin="5,15,5,0" VerticalAlignment="Top" FontSize="18" />
                <PasswordBox x:Name="passwordBox" Grid.Row="3" Grid.Column="1" Margin="5,3,5,3" FontSize="25"/>
                <Button x:Name="loginButton" Content="Login" Grid.Row="4" Grid.ColumnSpan="2" Margin="5,59,5,-36" Click="loginButton_Click"/>
                <TextBlock x:Name="errorMessageTextBlock" Grid.Row="3" Grid.ColumnSpan="2" Margin="5" Foreground="Red" Visibility="Collapsed"/>
            </Grid>
        </StackPanel>
        <!-- Home page-->
        <StackPanel x:Name="homePage" Background="LightGray" Grid.Row="2" Height="314" VerticalAlignment="Top" Grid.RowSpan="2" Grid.Column="2" Grid.ColumnSpan="3" Margin="10,10,10,0">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="50" />
                    <RowDefinition Height="50" />
                    <RowDefinition Height="50" />
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>
                <Button x:Name="manageUsersButton" Content="Felhasználók kezelése" Grid.Row="2" Grid.ColumnSpan="2" Margin="5,10,5,2" Click="manageUsersButton_Click"/>
                <Button x:Name="viewReportsButton" Content="Jelentések megtekintése" Grid.Row="3" Grid.ColumnSpan="2" Margin="5,3,5,3" Click="viewReportsButton_Click"/>
                <Button x:Name="settingsButton" Content="Beállítások" Grid.Row="4" Grid.ColumnSpan="2" Margin="5,3,5,3" Click="settingsButton_Click"/>

                <Button x:Name="logoutButton" Content="Kijelentkezés" Grid.Row="0" Grid.ColumnSpan="2" HorizontalAlignment="Right" Margin="5,5,5,5" Click="logoutButton_Click"/>
            </Grid>



        </StackPanel>
        <TextBlock x:Name="MainText" Grid.Column="3" HorizontalAlignment="Center" TextWrapping="Wrap" VerticalAlignment="Center" Height="80" Grid.Row="1" Width="250" FontFamily="Arial Black" FontSize="24"><Run Language="hu-hu" Text="NetCest - Adminfelület (bejelentkezés)"/></TextBlock>
        <Image x:Name="logo" HorizontalAlignment="Left" Height="91" VerticalAlignment="Top" Width="94" Source="/NetCest_logo.png" Margin="42,2,0,0" Grid.RowSpan="2" RenderTransformOrigin="0.5,0.5">
            
        </Image>



    </Grid>
</Window>
