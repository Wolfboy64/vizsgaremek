<Window x:Class="Netcest_Desktop.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Netcest_Desktop"
        mc:Ignorable="d"
        Title="NetCest - Adminfelület (bejelentkezés)" Height="450" Width="800" Background="Gray">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="34*" />
            <ColumnDefinition/>
            <ColumnDefinition Width="100" />
            <ColumnDefinition Width="250" />
            <ColumnDefinition Width="100" />
            <ColumnDefinition Width="35*" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="68.82" />
            <RowDefinition Height="31.18"/>
            <RowDefinition Height="250" />
            <RowDefinition Height="100" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <StackPanel x:Name="loginPage" Background="red" Grid.Column="3" Grid.Row="3" Height="334" VerticalAlignment="Top" Visibility="Hidden" Grid.RowSpan="2">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="50" />
                    <RowDefinition Height="50" />
                    <RowDefinition Height="50" />
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>

                <TextBlock Text="Felhasználónév:" Grid.Row="2" Margin="0,16,0,0" VerticalAlignment="Top" HorizontalAlignment="Center" RenderTransformOrigin="1.106,0.861" FontSize="18"/>
                <TextBox x:Name="usernameTextBox" Grid.Row="2" Grid.Column="1" Margin="5,5,5,5" FontSize="25"/>
                <TextBlock Text="Jelszó:" Grid.Row="3" Grid.Column="0" Margin="5,15,5,0" VerticalAlignment="Top" FontSize="18" />
                <PasswordBox x:Name="passwordBox" Grid.Row="3" Grid.Column="1" Margin="5,3,5,3" FontSize="25"/>
                <Button x:Name="loginButton" Content="Login" Grid.Row="4" Grid.ColumnSpan="2" Margin="5,59,5,-36" Click="loginButton_Click"/>
                <TextBlock x:Name="errorMessageTextBlock" Grid.Row="3" Grid.ColumnSpan="2" Margin="5" Foreground="Red" Visibility="Collapsed"/>
            </Grid>
        </StackPanel>
        <!-- Home page-->
        <StackPanel x:Name="homePage" Background="LightGray" Grid.Row="1" Height="434" VerticalAlignment="Top" Grid.RowSpan="4" Grid.ColumnSpan="6">
            <Grid Width="785">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="auto" />
                    <RowDefinition Height="auto" />
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="auto" />
                    <ColumnDefinition Width="auto" />
                    <ColumnDefinition Width="22" />
                    <ColumnDefinition Width="auto"/>
                    <ColumnDefinition Width="auto"/>
                </Grid.ColumnDefinitions>
                <StackPanel x:Name="TopMenu" Visibility="Visible">
                    <Grid>
                        <Button x:Name="manageUsersButton" Content="Felhasználók kezelése" Margin="0,10,643,10" Click="manageUsersButton_Click"/>
                        <Button x:Name="viewReportsButton" Content="Jelentések megtekintése" Margin="137,10,446,10" Click="viewReportsButton_Click"/>
                        <Button x:Name="settingsButton" Content="Beállítások" Margin="334,10,297,10" Click="settingsButton_Click"/>
                        <Button x:Name="logoutButton" Content="Kijelentkezés" Grid.Row="0" HorizontalAlignment="Left" Margin="703,6,0,6" Click="logoutButton_Click" Width="72" Grid.ColumnSpan="3"/>
                    </Grid>

                </StackPanel>



            </Grid>
            <StackPanel x:Name="MainHomePage" Visibility="Visible">
                <Grid>
                    <TextBlock x:Name="AdminInfos" Height="auto" Width="auto" Margin="10,0,556,-40"><Run Language="hu-hu" Text="Adminisztrátori információk:"/></TextBlock>
                    <ListView x:Name="Userlist" d:ItemsSource="{d:SampleData ItemCount=0}" Height="auto" Width="auto" Margin="428,-1,207,10" >
                        <ListView.View>
                            <GridView>
                                <GridViewColumn/>
                            </GridView>
                        </ListView.View>
                    </ListView>
                </Grid>
            </StackPanel>



            <StackPanel x:Name="manageUsersPage" Visibility="Visible">
                <Grid Height="100">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    <Button Grid.Column="1" Content="módosítás" HorizontalAlignment="Left" Margin="10,30,0,0" VerticalAlignment="Top" Width="72"/>
                    <Button Grid.Column="1" Content="törlés" Margin="10,0,2,70" RenderTransformOrigin="0.5,0.5"/>
                    <ListView x:Name="ManageUserList" Grid.Column="1" d:ItemsSource="{d:SampleData ItemCount=0}" Margin="279,0,-383,0" Grid.RowSpan="2">
                        <ListView.View>
                            <GridView>
                                <GridViewColumn/>
                            </GridView>
                        </ListView.View>
                    </ListView>

                </Grid>
            </StackPanel>



        </StackPanel>
        <TextBlock x:Name="MainText" Visibility="Hidden" Grid.Column="3" HorizontalAlignment="Center" TextWrapping="Wrap" VerticalAlignment="Center" Height="80" Grid.Row="1" Width="250" FontFamily="Arial Black" FontSize="24" Grid.RowSpan="2"><Run Language="hu-hu" Text="NetCest - Adminfelület (bejelentkezés)"/></TextBlock>
        <Image x:Name="logo" HorizontalAlignment="Left" Height="91" VerticalAlignment="Top" Width="94" Source="/NetCest_logo.png" Margin="87,247,0,0" Grid.RowSpan="2" RenderTransformOrigin="0.5,0.5" Grid.Column="5" Grid.Row="3">

        </Image>



    </Grid>
</Window>
